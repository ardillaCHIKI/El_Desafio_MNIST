body {
    text-align: center;
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin-top: 50px;
}

canvas {
    border: 2px solid #000;
    background-color: #fff;
    cursor: crosshair;
}

button {
    margin: 10px;
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
}